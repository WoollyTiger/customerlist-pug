doctype html 
html 
  head 
    title Add customer 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body 
    div.container
      div.col-6
        h1.display-1 New customer 
        form(action='/addcustomer', method='POST').row.g-2
          div.col-md-4
            label(for="firstname").form-label First name
              input(id='firstname' type='text', name='firstname').form-control.form-control-lg
          div.col-md-4
            label(for="lastname").form-label Last name
              input(id='lastname' type='text', name='lastname').form-control.form-control-lg
          div.col-md-4
            label(for="email").form-label Email
              input(id='email' type='email', name='email').form-control.form-control-lg
          div 
            input(type='submit', value='Add').btn.btn-primary
